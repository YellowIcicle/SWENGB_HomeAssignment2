<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:text=""
            android:ems="10"
            android:id="@+id/textName" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="85dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/textAge"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="85dp"
            app:layout_constraintVertical_chainStyle="spread_inside" android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Age"
            android:text=""
            android:ems="10"
            android:id="@+id/textAge"
            app:layout_constraintTop_toBottomOf="@+id/textName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
            android:layout_marginTop="10dp"/>
    <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textAge"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>
